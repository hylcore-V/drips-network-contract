{
    "extends": "solhint:recommended",
    "plugins": [
        "prettier"
    ],
    "rules": {
        "compiler-version": [
            "error",
            "^0.8.13"
        ],
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "not-rely-on-time": "off",
        "prettier/prettier": "warn",
        "reason-string": [
            "warn",
            {
                "maxLength": 64
            }
        ]
    }
}
